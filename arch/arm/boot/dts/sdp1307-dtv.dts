	ehci@0x18800000 {
		status = "okay";
		samsung,sw-reset = <0x18090000 0x8F4 0x1000>;
		samsung,ehci-gpr_reg1 = <0x18850000 0x18 0x002020>;
		samsung,ehci-link-set =  <0x18850000 0x1c 0x8e0000>;
		samsung,sw-reset-release = <0x18090000 0x8F4 0x1000>;
		samsung,vbus-enable = <0x18090000 0xD5C 0x3000000 0x40>; 
	};

	ehci@0x18810000 {
		status = "okay";
		samsung,sw-reset = <0x18090000 0x8F4 0x2000>;
		samsung,ehci-gpr_reg1 = <0x18850000 0x10 0x002020>;
		samsung,ehci-link-set =  <0x18850000 0x14 0x8e0000>;
		samsung,sw-reset-release = <0x18090000 0x8F4 0x2000>;
		samsung,vbus-enable = <0x18090000 0xD5C 0x300000 0x20>;
	};
	
	ehci@0x180E0000 {
		status = "okay";
		samsung,sw-reset = <0x18090000 0x8F4 0x4000>;
		samsung,ehci-gpr_reg1 = <0x180a0000 0x10 0x002020>;
		samsung,ehci-link-set = <0x180a0000 0x14 0x8e0000>;
		samsung,sw-reset-release = <0x18090000 0x8F4 0x4000>;
//		samsung,vbus-enable = <0x18090000 0xD5C 0x30000000 0x80>;
	};

	ohci@0x18808000 {
		status = "okay";
	};

	ohci@0x18818000 {
		status = "okay";
	};
	
	ohci@0x180E8000 {
		status = "okay";
	};
	
	sata@18870000 {
		status = "okay";
	};

	sata@18880000 {
		status = "okay";
	};

	tmu@180908DC {
//		status = "okay";
		
		sensor_id = <0>;

		start_zero_throttle	= <0>;
		stop_zero_throttle	= <5>;
		stop_1st_throttle	= <102>;
		start_1st_throttle	= <110>;
		stop_2nd_throttle	= <112>;
		start_2nd_throttle	= <118>;
		stop_3rd_throttle	= <120>;
		start_3rd_throttle	= <125>;

		cpu_limit_1st_throttle	= <700000>;
		cpu_limit_2nd_throttle	= <400000>;
		cpu_limit_3rd_throttle	= <100000>;

		gpu_limit_1st_throttle	= <250000>;
		gpu_limit_2nd_throttle	= <200000>;
		gpu_limit_3rd_throttle	= <50000>;

		log_file_path = "/mtd_rwarea/ThermalThrottle.txt";
	};
};
