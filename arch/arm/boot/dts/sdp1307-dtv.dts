/dts-v1/;
/include/ "sdp1307.dtsi"

/ {
	model = "Samsung STB based on SDP1307 SoC - Eval Board";
	compatible = "samsung,stb", "samsung,sdp1307";

	memory {
		device_type = "memory";
		reg =  <0x80000000 0x13A00000>, <0xc0000000 0x1B500000>, <0xe0000000 0x16D00000>;
	};

	chosen {
		bootargs = "console=ttyS2,115200N8 root=/dev/mmcblk0p3 rootfstype=squashfs rootwait earlyprintk sdp_sparsemem";
	};

	fixed-rate-clocks {
		fin {
			compatible = "samsung,sdp-clock-fin";
			clock-frequency = <24000000>;
		};
	};

	emac@18830000 {/* EMAC */
		status = "okay";
	};

	gmac@18860000 {/* GMAC*/
		status = "okay";

		fixed-link {/* for STB cable modem */
			phy-id = <0>;
			speed = <1000>;
			duplex = <1>;
			rgmii;
		};
	};

	serial@18090A00 {
		status = "okay";
	};

	serial@18090A40 {
		status = "okay";
	};

	serial@18090A80 {
		status = "okay";
	};

	i2c@18090100 {
		status = "okay";
		samsung,i2c-sda-delay = <1>;
		samsung,i2c-max-bus-freq = <400000>;
		samsung,i2c-irq-status-reg = <0x180901F4>;
		samsung,i2c-cpu-affinity = <1>;
	};
	
	i2c@18090120 {
		status = "okay";
		samsung,i2c-sda-delay = <1>;
		samsung,i2c-max-bus-freq = <400000>;
		samsung,i2c-irq-status-reg = <0x180901F4>;
		samsung,i2c-cpu-affinity = <1>;
	};

	i2c@18090140 { 
		status = "okay";
		samsung,i2c-sda-delay = <1>;
		samsung,i2c-max-bus-freq = <400000>;
		samsung,i2c-irq-status-reg = <0x180901F4>;
		samsung,i2c-cpu-affinity = <1>;

		tps56520@37 {
			compatible = "ti,tps56520";
			reg = <0x37>;

			regulator-name = "CPU_PW";
			regulator-min-microvolt = <600000>;
			regulator-max-microvolt = <1870000>;
			regulator-always-on;
			regulator-boot-on;

			default_volt = <1280000>;
		};
	};

	i2c@18090160 {
		status = "okay";
		samsung,i2c-sda-delay = <1>;
		samsung,i2c-max-bus-freq = <400000>;
		samsung,i2c-irq-status-reg = <0x180901F4>;
		samsung,i2c-cpu-affinity = <1>;
	};

	i2c@18090180 {
		status = "okay";
		samsung,i2c-sda-delay = <1>;
		samsung,i2c-max-bus-freq = <400000>;
		samsung,i2c-irq-status-reg = <0x180901F4>;
		samsung,i2c-cpu-affinity = <1>;
	};

	i2c@180901A0 {
		status = "okay";
		samsung,i2c-sda-delay = <1>;
		samsung,i2c-max-bus-freq = <400000>;
		samsung,i2c-irq-status-reg = <0x180901F4>;
		samsung,i2c-cpu-affinity = <1>;
	};

	i2c@180901C0 {
		status = "okay";
		samsung,i2c-sda-delay = <1>;
		samsung,i2c-max-bus-freq = <400000>;
		samsung,i2c-irq-status-reg = <0x180901F4>;
	//	samsung,i2c-pad-enable = <0x10B00C40 0x8000>;
		samsung,i2c-cpu-affinity = <1>;
	};

	i2c@180901E0 {
		status = "okay";
		samsung,i2c-sda-delay = <1>;
		samsung,i2c-max-bus-freq = <400000>;
		samsung,i2c-irq-status-reg = <0x180901F4>;
	//	samsung,i2c-pad-enable = <0x10B00C40 0x10000>;
		samsung,i2c-cpu-affinity = <1>;

	};

