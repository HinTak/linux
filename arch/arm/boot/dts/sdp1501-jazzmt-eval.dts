		samsung,dram-base-b = <0x2AD00000>;
		samsung,dram-size-a = <0x0C000000>;
		samsung,dram-size-b = <0x10A00000>;
		xmif_a_reg = <0x00F10700>;
		xmif_b_reg = <0x00F20700>;
		xmif_c_reg = <0x00F30700>;
		xmif_d_reg = <0x00F40700>;
	};

	sdp_hen@0x00ac0000 {
		samsung,fw-name = "sdp_hen/ucode-hen.fw";
		samsung,fw-size = <0x100000>;
		samsung,dram-base-a = <0xBB300000>;
		samsung,dram-base-b = <0xBBA00000>;
