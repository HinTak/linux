/dts-v1/;
/include/ "sdp1501.dtsi"

/ {
	model = "Samsung DTV Eval Board based on SDP1501(Jazz-Mt) SoC";
	compatible = "samsung,dtv", "samsung,sdp1501";

	memory {
		device_type = "memory";
		reg = <0x01000000 0x0D600000>; //, <0x20000000 0x0AD00000>, <0x45800000 0x01200000>, <0x60000000 0x11700000>, <0x80000000 0x39400000>;
	};

	chosen {
		bootargs = "console=ttyS0,115200N8 root=/dev/mmcblk0p3 rootfstype=squashfs rootwait earlyprintk sdp_sparsemem nosmp";
	};

	fixed-rate-clocks {
		fin {
			compatible = "samsung,sdp-clock-fin";
			clock-frequency = <24576000>;
		};
	};

