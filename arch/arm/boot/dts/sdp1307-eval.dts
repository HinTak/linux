	ehci@0x18800000 {
		status = "disabled";
		samsung,sw-reset = <0x18090000 0x8F4 0x1000>;
	//	samsung,ehci-gpr_reg = <0x18850000 0x14 0x400>;
	//	samsung,ehci-gpr_reg1 = <0x100FC000 0x18 0x5000>;//------
		samsung,sw-reset-release = <0x18090000 0x8F4 0x1000>;
		samsung,vbus-enable = <0x18090000 0xC90 0x33300>;
	};

	ehci@0x18810000 {
		status = "disabled";
		samsung,sw-reset = <0x18090000 0x8F4 0x2000>;
	//	samsung,ehci-gpr_reg = <0x18850000 0x14 0x200>;
	//	samsung,ehci-gpr_reg1 = <0x100FC000 0x18 0x5000>;
		samsung,sw-reset-release = <0x18090000 0x8F4 0x2000>;
		samsung,vbus-enable = <0x18090000 0xC94 0x1C>;
	};
	
	ehci@0x180E0000 {
		status = "disabled";
		samsung,sw-reset = <0x18090000 0x8F4 0x4000>;
	//	samsung,ehci-gpr_reg = <0x18850000 0x14 0x100>;
	//	samsung,ehci-gpr_reg1 = <0x100FC000 0x18 0x5000>;
	//	samsung,ehci-link-set = <0x100C0000 0x08 0x1e000>;
		samsung,sw-reset-release = <0x18090000 0x8F4 0x4000>;
	};

	sata@18870000 {
		status = "okay";
	};

	sata@18880000 {
		status = "okay";
	};

	tmu@18090CDC {
//		status = "okay";
		
		sensor_id = <0>;

		start_zero_throttle	= <0>;
		stop_zero_throttle	= <5>;
		stop_1st_throttle	= <102>;
		start_1st_throttle	= <110>;
		stop_2nd_throttle	= <112>;
		start_2nd_throttle	= <118>;
		stop_3rd_throttle	= <120>;
		start_3rd_throttle	= <125>;

		cpu_limit_1st_throttle	= <800000>;
		cpu_limit_2nd_throttle	= <600000>;
		cpu_limit_3rd_throttle	= <100000>;

		gpu_limit_1st_throttle	= <200000>;
		gpu_limit_2nd_throttle	= <200000>;
		gpu_limit_3rd_throttle	= <50000>;

		log_file_path = "/rwarea/ThermalThrottle.txt";
	};
};
