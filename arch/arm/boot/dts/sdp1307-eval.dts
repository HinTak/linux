/dts-v1/;
/include/ "sdp1307.dtsi"

/ {
	model = "Samsung STB based on SDP1307 SoC - Eval Board";
	compatible = "samsung,stb", "samsung,sdp1307";

	memory {
		device_type = "memory";
		reg =  <0x80000000 0x20000000>, <0xc0000000 0x10000000>, <0xe0000000 0x10000000>;
	};

	chosen {
		bootargs = "console=ttyS2,115200N8 root=/dev/mmcblk0p3 rootfstype=squashfs rootwait earlyprintk sdp_sparsemem";
		//bootargs = "console=ttyS2,115200N8 initrd=0x80800000,8M root=/dev/ram0 rootfstype=squashfs rw rootwait earlyprintk user_debug=31 sdp_sparsemem";
	};

	fixed-rate-clocks {
		fin {
			compatible = "samsung,sdp-clock-fin";
			clock-frequency = <24000000>;
		};
	};

	serial@18090A00 {
		status = "okay";
	};

	serial@18090A40 {
		status = "okay";
	};

	serial@18090A80 {
		status = "okay";
	};

	i2c@10090100 {
		status = "okay";
		samsung,i2c-sda-delay = <1>;
		samsung,i2c-max-bus-freq = <400000>;
		samsung,i2c-irq-status-reg = <0x100901F4>;
		samsung,i2c-cpu-affinity = <3>;
	};

/*
