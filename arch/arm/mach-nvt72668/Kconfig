config ARCH_NVT72668
	bool "Novatek NVT72668 SoC (Cotex A9x4)" if ARCH_NVT_V7
	select ARM_GIC
	select CLKDEV_LOOKUP
	select COMMON_CLK
	select CPU_V7
	select GENERIC_CLOCKEVENTS
	select HAVE_CLK
	select HAVE_SMP
	select MIGHT_HAVE_CACHE_L2X0
	select PLAT_NOVATEK_CLOCK
	select PLAT_NOVATEK
	help
	  This option enables support for systems using Cortex processor based
	  Novatek Cortex A9X4 72668 motherboard,
	  for example:

	  - Cortex-A9x4 

	  You must boot using a Flattened Device Tree in order to use these
	  platforms. The traditional (ATAGs) boot method is not usable on
	  these boards with this option.

config NVT_MMC_IF
	bool "NVT MMC host controller"
	depends on ARCH_NVT72668
	help
	  This will enable novatek mmc host controller.

choice
	prompt "NVT Machine model"
	depends on ARCH_NVT72668
	default MACH_NT14U_MANUAL

config MACH_NT14U_MANUAL
	bool "Machine NT14U"
	help
	  This will enable novatek machine NT14U.

config MACH_NT14M_MANUAL
	bool "Machine NT14M"
	help
	  This will enable novatek machine NT14M.	
endchoice	    
	  	
config MACH_NT14U
	def_bool y
	depends on  MACH_NT14U_MANUAL
	  
config MACH_NT14M
	def_bool y
	depends on  MACH_NT14M_MANUAL

config PULLOUT_INITRAMFS
        bool "Pull-out Initramfs source file from kernel image"
        default n
        help
          Enable this to pull-out initramfs_data.cpio.gz from vmlinux.

config INITRAMFS_IMG_HDR_ADDR
        hex "Location info of __initramfs_start and __initramfs_end"
        depends on PULLOUT_INITRAMFS
        default 0x08000000
        help
          The first word contains __initramfs_start. And the second word contains __initramfs_end.


