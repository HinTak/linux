config ARCH_NVT72668
	bool "Novatek NVT72668 SoC (Cotex A9x4)" if ARCH_NVT_V7
	select ARM_GIC
	select CLKDEV_LOOKUP
	select COMMON_CLK
	select CPU_V7
	select GENERIC_CLOCKEVENTS
	select HAVE_CLK
	select HAVE_SMP
	select ARCH_REQUIRE_GPIOLIB
	select GPIO_SYSFS
	select MIGHT_HAVE_CACHE_L2X0
	select PLAT_NOVATEK_CLOCK
	select PLAT_NOVATEK
	help
	  This option enables support for systems using Cortex processor based
	  Novatek Cortex A9X4 72668 motherboard,
	  for example:

	  - Cortex-A9x4

	  You must boot using a Flattened Device Tree in order to use these
	  platforms. The traditional (ATAGs) boot method is not usable on
	  these boards with this option.

config ARCH_NVT72658
	bool "Novatek NVT72658 SoC"
	depends on ARCH_NVT72668
	help
	  This flag co-exist with ARCH_NVT72668 when build NVT72658 code base.
	  Source code should distinguish 72668 and 76258 by this flag.

config NVT_MMC_IF
	bool "NVT MMC host controller"
	depends on ARCH_NVT72668
	help
	  This will enable novatek mmc host controller.

config NVT_HW_CLOCK
	bool "NVT  HW clock driver"
	depends on ARCH_NVT72668
	help
	  Use CPU Global timer(64bit) to calculate time.
	  [(PRESCALER_value+1)x(Load_value+1)] / PERIPH_CLOCK

config NVT_HW_CLOCK_TEST
	bool "Test NVT HW clock"
	depends on NVT_HW_CLOCK
	help
	  Creat a file node that can test hw clock function
	  EX : cat proc/g_timer
	  Result :
		1st Get Gtimer time!
		Gtimer :  time      = xxxxx
		2nd Get Gtimer time!
		Gtimer :  time      = xxxxx + 10 sec
		3rd Get Gtimer time!
		Gtimer :  time      = xxxxx + 20 sec

choice
	prompt "NVT Machine model"
	depends on ARCH_NVT72668
	default MACH_NT14U_MANUAL

config MACH_NT14U_MANUAL
	bool "Machine NT14U"
	help
	  This will enable novatek machine NT14U.

config MACH_NT14M_MANUAL
	bool "Machine NT14M"
	help
	  This will enable novatek machine NT14M.
endchoice

config MACH_NT14U
	def_bool y
	depends on  MACH_NT14U_MANUAL

config MACH_NT14M
	def_bool y
	depends on  MACH_NT14M_MANUAL

config NVT_UART0_NOTTY
	bool "Access UART0 without TTY"
	default y
	depends on ARCH_NVT72668 
	help
	  Access UART0 without TTY.

config NVT_UNZIP
	bool "NVT GZIP decompressor"
	default n
	select HW_DECOMPRESSOR

config NVT_HW_SHA256
	bool "NVT H/W SHA"
	default n
